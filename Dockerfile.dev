FROM ubuntu:focal
ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /hicn-build

ARG USERNAME=ubuntu
ARG USER_UID=1000
ARG USER_GID=${USER_UID}

COPY Makefile versions.cmake ./
COPY scripts scripts/

USER root

RUN apt update && apt-get install -y \
  make \
  sudo \
  curl \
  valgrind \
  git

RUN make deps debug-tools

